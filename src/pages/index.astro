			const btnYes = document.getElementById('btnYes');
			const btnNo = document.getElementById('btnNo');
			const celebration = document.getElementById('celebration');
			const confettiContainer = document.getElementById('confettiContainer');
			const wrongToast = document.getElementById('wrongToast');

			// YES button click
			btnYes.addEventListener('click', function() {
				celebration.classList.add('active');
				launchConfetti();
			});

			// NO button - run away on hover
			let noRunning = false;

			function moveNoButton() {
				if (noRunning) return;
				noRunning = true;

				const btn = btnNo;
				btn.classList.add('running-away');

				const maxX = window.innerWidth - btn.offsetWidth - 20;
				const maxY = window.innerHeight - btn.offsetHeight - 20;

				const randomX = Math.floor(Math.random() * maxX);
				const randomY = Math.floor(Math.random() * maxY);

				btn.style.left = randomX + 'px';
				btn.style.top = randomY + 'px';

				setTimeout(() => { noRunning = false; }, 300);
			}

			btnNo.addEventListener('mouseenter', moveNoButton);
			btnNo.addEventListener('touchstart', function(e) {
				e.preventDefault();
				moveNoButton();
			});

			// If somehow NO is clicked
			btnNo.addEventListener('click', function() {
				wrongToast.classList.add('show');
				setTimeout(() => {
					wrongToast.classList.remove('show');
				}, 2500);
				moveNoButton();
			});

			// Confetti hearts launcher
			function launchConfetti() {
				const colors = ['#e91e63', '#f06292', '#ff80ab', '#f48fb1', '#ec407a', '#c2185b', '#fff', '#ff4081'];

				function createConfettiHeart() {
					const heart = document.createElement('div');
					heart.classList.add('confetti-heart');

					const size = Math.random() * 10 + 5;
					const color = colors[Math.floor(Math.random() * colors.length)];
					const left = Math.random() * 100;
					const duration = Math.random() * 2 + 2;
					const delay = Math.random() * 3;

					heart.style.setProperty('--c-size', size + 'px');
					heart.style.setProperty('--c-color', color);
					heart.style.left = left + '%';
					heart.style.animationDuration = duration + 's';
					heart.style.animationDelay = delay + 's';

					confettiContainer.appendChild(heart);

					setTimeout(() => {
						heart.remove();
					}, (duration + delay) * 1000 + 500);
				}

				// Launch many confetti hearts in waves
				for (let i = 0; i < 50; i++) {
					createConfettiHeart();
				}

				// Second wave
				setTimeout(() => {
					for (let i = 0; i < 30; i++) {
						createConfettiHeart();
					}
				}, 1500);

				// Third wave
				setTimeout(() => {
					for (let i = 0; i < 20; i++) {
						createConfettiHeart();
					}
				}, 3000);
			}
